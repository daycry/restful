{
    "name": "daycry/restful",
    "description": "Rest Server for Codeigniter 4",
    "homepage": "https://github.com/daycry/restfull",
    "authors":
    [
        {
            "name": "daycry",
            "homepage": "https://github.com/daycry",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "require": {
      "php": ">=7.4 || ^8.0",
        "daycry/encryption": "^2.0",
        "daycry/jwt": "^1.0",
        "daycry/class-finder": "^2.0",
        "daycry/cronjob": "^2.0",
        "codeigniter4/settings": "^2.1"
    },
    "require-dev":
    {
        "codeigniter4/devkit": "^1",
        "codeigniter4/framework": "^4",
        "mikey179/vfsstream": "^1",
        "mockery/mockery": "^1"
    },
    "autoload":
    {
        "psr-4": {
            "Daycry\\RestFul\\": "src/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Tests\\": "tests/",
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "bash admin/setup.sh"
        ],
        "analyze": [
            "phpstan analyze",
            "psalm",
            "rector process --dry-run"
        ],
        "sa": "@analyze",
        "ci": [
            "Composer\\Config::disableProcessTimeout",
            "@cs",
            "@deduplicate",
            "@inspect",
            "@analyze",
            "@test"
        ],
        "cs": [
            "php-cs-fixer fix src --ansi --verbose --dry-run --diff",
            "php-cs-fixer fix tests --ansi --verbose --dry-run --diff"
        ],
        "cs-fix": [
            "php-cs-fixer fix src --ansi --verbose --diff",
            "php-cs-fixer fix tests --ansi --verbose --diff"
        ],
        "deduplicate": "phpcpd app/ src/ --exclude src/Database/Migrations/2023-03-13-000001_create_core_tables.php",
        "inspect": "deptrac analyze --cache-file=build/deptrac.cache",
        "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
        "style": "@cs-fix",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
